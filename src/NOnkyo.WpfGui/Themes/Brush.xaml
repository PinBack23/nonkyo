<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <LinearGradientBrush x:Key="BorderBackgroundBrush" EndPoint="1,0.5" StartPoint="0,0.5">
        <GradientStop Color="Black" Offset="0" />
        <GradientStop Color="Transparent" Offset="1" />
    </LinearGradientBrush>
    
    <SolidColorBrush x:Key="PowerOn" Color="#FF5A9906"/>
    
    <SolidColorBrush x:Key="PowerOff" Color="#FF991706"/>
        
</ResourceDictionary>